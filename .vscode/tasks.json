{
    "tasks": [
        {
            "label": "C/C++: g++ build active file (Linux)",
            "type": "shell",
            "command": "time",
            "args": [
                "g++",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-include",
                "bits/stdc++.h",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
              },
              
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            // "isBackground": true
        },
        {
            "type": "shell",  // debugger stops on error if type is 'shell' not 'cppbuild'
            "label": "C/C++: MSVC build active file",
            "command": "cl.exe",
            "args": [
                // "/Ox",
                "/Z7",
                "/EHsc",
                "/nologo",
                "/Yubits/stdc++.h",
                "/std:c++latest",
                "/JMC",
                "/fsanitize=address",
                "/diagnostics:caret",
                "/Fe${workspaceFolder}\\bin\\CodeForces.exe",
                "${file}",
                "bits/stdc++.obj",
                // "/link",
                "/INCREMENTAL:no"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },

            "detail": "compiler: cl.exe",
        },
        {
            "type": "shell",
            "label": "g++.exe msys2",
            // "command": "(Measure-Command{g++",
